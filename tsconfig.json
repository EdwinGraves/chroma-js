{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "lib": [
          "es6",
          "dom"
        ],
        "strict": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src"
    ],
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
    }
}

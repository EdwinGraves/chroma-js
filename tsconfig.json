{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}